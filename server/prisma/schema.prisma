datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  minutes   Minutes[]
}

model Minutes {
  id          Int         @id @default(autoincrement())
  title       String
  department  String
  timeStart   DateTime
  timeEnd     DateTime
  place       String
  item        String
  content     String
  decision    String
  userId      Int
  audioId     Int?
  user        User        @relation(fields: [userId], references: [id])
  attendees   MinutesAttendees[]
}

model Attendees {
  id          Int                 @id @default(autoincrement())
  name        String
  minutes     MinutesAttendees[]
}

model MinutesAttendees {
  minutes_id  Int
  attendee_id Int
  minutes     Minutes  @relation(fields: [minutes_id], references: [id])
  attendee    Attendees  @relation(fields: [attendee_id], references: [id])

  @@id([minutes_id, attendee_id])
}